# Trace - Enterprise Asset Management System
# Environment Configuration

# Application Settings
APP_NAME="Trace - Enterprise Asset Management"
APP_VERSION="1.0.0"
DEBUG=false

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production
AGENT_SECRET_KEY=your-agent-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
AGENT_TOKEN_EXPIRE_DAYS=365

# Database (choose one)
# Local PostgreSQL:
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/trace_db
# Neon (recommended for Vercel):
# NEON_DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require
# Vercel Postgres:
# POSTGRES_URL=postgres://...
DATABASE_ECHO=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://trace.yourdomain.com

# Geofencing
DEFAULT_GEOFENCE_RADIUS_METERS=1000

# Data Retention (days)
LOCATION_DATA_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AGENT_PING_INTERVAL_SECONDS=300

# Privacy Settings
GDPR_ENABLED=true
CONSENT_REQUIRED=true
